{
    "id": "sap.ui.demo.bulletinboard",
    "viewports": [
        {
          "label": "desktop",
            "width": 1920,
            "height": 1080
        },{
            "label": "tablet",
            "width": 960,
            "height": 540
        }
    ],
    "scenarios": [
        {
            "label": "Worklist",
            "cookiePath": "backstop_data/engine_scripts/cookies.json",
            "url": "http://localhost:1919/ui5-ase-demo/webapp/test/mockServer.html",
            "delay": 1000,
            "postInteractionWait": 1000,
            "misMatchThreshold" : 0.1,
            "scrollToSelector": "header[class*=sapMeHomeHeader][id*=header2]",
            "readySelector": "div[id*=kpi0]"
        },{
            "label": "Post",
            "cookiePath": "backstop_data/engine_scripts/cookies.json",
            "url": "http://localhost:1919/ui5-ase-demo/webapp/test/mockServer.html#/Post/PostID_1",
            "delay": 1000,
            "postInteractionWait": 1000,
            "misMatchThreshold" : 0.1,
            "clickSelector": "div[id*='__kpi0-__']"
        }
    ],

    "paths": {
        "bitmaps_reference": "backstop_data/bitmaps_reference",
        "bitmaps_test": "backstop_data/bitmaps_test",
        "engine_scripts": "backstop_data/engine_scripts",
        "html_report": "backstop_data/html_report",
        "ci_report": "backstop_data/ci_report"
    },
    "report": ["browser","CI"],
    "engine": "puppeteer",
    "engineOptions": {
        "args": ["--no-sandbox", "--disable-setuid-sandbox"]
    },
    "asyncCaptureLimit": 1,
    "asyncCompareLimit": 50,
    "debug": false,
    "debugWindow": false
}